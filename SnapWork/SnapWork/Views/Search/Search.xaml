<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapWork.Views.Search"
             Title="Искать вакансии">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource Key=LabelTextColor}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderColor" Value="{StaticResource Key=ButtonColor}"/>
            <Setter Property="BackgroundColor" Value="{StaticResource Key=ButtonBackgroundColor}"/>
            <Setter Property="TextColor" Value="{StaticResource Key=ButtonTextColor}" />
            <Setter Property="HeightRequest" Value="30"/>
            <Setter Property="WidthRequest" Value="60"/>
            <Setter Property="HorizontalOptions" Value="End"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="WidthRequest" Value="470"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
        </Style>
    </ContentPage.Resources>

    <!--ПОИСК ВАКАНСИЙ-->

    <ContentPage.Content>
        <ScrollView>
            <StackLayout WidthRequest="{StaticResource Key=ScreenWidth}" BackgroundColor="{StaticResource Key=BackgroundColor}">

                <StackLayout Orientation="Horizontal" VerticalOptions="Start" HeightRequest="50" BackgroundColor="Gray">
                    <Image HeightRequest="{StaticResource Key=IconImageHeigth}" WidthRequest="{StaticResource Key=IconImageWidth}" Source="lupe.png" Aspect="AspectFit" Margin="5,5,0,5"/>
                    <Entry x:Name="VacName" Placeholder="Введите имя вакансии" Margin="0,5,0,5" />
                    <Button x:Name="FindButton" Text="Найти" Margin="0,5,0,5"/>
                </StackLayout>
                
                <ListView x:Name="VacancyList"
                          HasUnevenRows="True"
                          IsVisible="True"
                          ItemsSource="{Binding Vacancies}"
                          ItemTapped="VacancyList_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal" >
                                        <Image x:Name="VacantionImage" Source="{Binding photo}"/>
                                        <StackLayout Orientation="Vertical">
                                            <StackLayout Orientation="Horizontal">
                                                <Label x:Name="NameLabel" Text="{Binding nameVacancy}"/>
                                                <Label x:Name="CityLabel" Text="{Binding geoInfCity}"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label x:Name="TypeOfWorkLabel" Text="{Binding idTypeJob}"/>
                                                <Label x:Name="Payment" Text="{Binding payment}"/>
                                            </StackLayout>

                                        </StackLayout>

                                    </StackLayout>

                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!--<Button Clicked="Button_Clicked" VerticalOptions="EndAndExpand"/>-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>