        <StackLayout WidthRequest="{StaticResource Key=ScreenWidth}">

            <ListView HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="Bla bla bla"  FontSize="18" />
                                    <Label Text="Li la lu" />
